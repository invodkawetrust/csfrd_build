#!/bin/sh

USER=csfrd
USER_HOME=/home/csfr
chown -R $USER $USER_HOME/insight-api
export INSIGHT_NETWORK=testnet
export INSIGHT_DB=$USER_HOME/insight-api/db
export SAFFRONCOIND_DATADIR=$USER_HOME/.saffroncoin-testnet/
export SAFFRONCOIND_USER=`cat $USER_HOME/.saffroncoin-testnet/saffroncoin.conf | sed -n 's/.*rpcuser=\([^ \n]*\).*/\1/p'`
export SAFFRONCOIND_PASS=`cat $USER_HOME/.saffroncoin-testnet/saffroncoin.conf | sed -n 's/.*rpcpassword=\([^ \n]*\).*/\1/p'`
#SAFFRONCOIND_HOST -- use the default (localhost)
#SAFFRONCOIND_PORT -- use the default (29716)
#SAFFRONCOIND_P2P_PORT -- use the default (29717)

#sv start bitcoind-testnet || exit 1
cd ${USER_HOME}/insight-api
exec 2>&1
echo "Waiting 60 seconds before starting insight, to allow saffroncoind to fully initialize..."
sleep 60
exec chpst -u ${USER} /usr/bin/node ${USER_HOME}/insight-api/insight.js
